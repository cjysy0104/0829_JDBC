package com.aclass.test.run;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Scanner;

public class TestRun {

	public static void main(String[] args) {
		// JDBC 맛보기
		/*
		 * 1. DBeaver 실행(클라이언트 프로그램 실행)
		 * 
		 * 2. 접속하기
		 * 
		 * 3. DBMS 선택
		 * 
		 * 4. ojdbc.jar --> 등록
		 * 
		 * 5. IP주소, PORT번호, 사용자계정, 비밀번호
		 * 
		 * 6. 새 SQL편집기
		 * 
		 * 7. 원하는 구문 작성: INSERT문 작성 ==> INSERT INTO 테이블명 VALUES('값', '값', '값');
		 * 
		 * 8. SQL문 실행
		 * 
		 * 9. UpdatedRows : 1
		 * 
		 * 10. COMMIT;
		 */
		// 0) 필요한 변수 세팅
		Connection conn = null;
		Statement stmt = null;
		int result = 0;

		// 사용자에게 값을 입력받아서 DBMS로 전달 -> 테이블에 INSERT
		Scanner sc = new Scanner(System.in);

		System.out.println("번호를 입력해주세요 > ");
		int num = sc.nextInt();
		sc.nextLine();
		System.out.println("이름을 입력해주세요 > ");
		String name = sc.nextLine();

		// 실행할 SQL문(완성된 형태로 만들어주기)
		String sql = "INSERT INTO TB_STUDENT VALUES(1, '홍길동', SYSDATE)";
		sql = "INSERT INTO TB_STUDENT VALUES (" + num + ", '" + name + "', SYSDATE)";

		// 1) JDBC Driver 등록 -> ORACLE -> ojdbc.jar : package properties : 직접 등록해 apply
		// Driver 등록은 프로그램 실행 시 딱 1회만 하면 됨
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			System.out.println("Driver등록 성공!");

			// 2) DB서버와의 연결(IP주소, PORT번호, 사용자이름, 비밀번호)
			conn = DriverManager.getConnection("jdbc:oracle:thin:@115.90.212.20:10000:XE", "CJY19", "CJY191234");
			System.out.println("DB서버 접속 성공!");
			// jdbc:oracle:thin:@IP주소:PORT번호:SID - 정해진 규칙임: 직접 확인하여 기입해야함
			// 사용자이름: 항상 대문자로 변환됨 (DB자체에서 사용자이름이 대문자만 가능) / 비밀번호: 대소문자 구분하므로 주의

			conn.setAutoCommit(false);

			// 3) 새 SQL편집기 열기
			stmt = conn.createStatement();
			System.out.println("Statement 객체 생성 성공!");

			// 4) SQL문 실행
			// UpdatedRows: N
			// UpdatedRows: N
			// UpdatedRows: N
			// DML(INSERT, UPDATE, DELETE) => 처리된 행의 개수 반환
			// executeUpdate(DML문); => 반환타입: int
			result = stmt.executeUpdate(sql);
			// .executeUpdate("실행하고자하는 SQL문");
			System.out.println("SQL문 실행 성공!");

			// 5) 트랜잭션처리
			if (result > 0) { // INSERT에 성공했을 경우
				conn.commit();
				System.out.println("COMMIT 성공!");
			}

		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			try {
				stmt.close();
				conn.close();
			} catch (SQLException e) {
				e.printStackTrace();
			}
		}

	}

}
